<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Event title and description at the top -->
    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:text="Event Name" />

    <TextView
        android:id="@+id/event_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Event Description" />

    <!-- Vote buttons and display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Upvote Button with Icon -->
        <Button
            android:id="@+id/upvote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▲ Upvote"
            android:padding="8dp"
            android:textSize="14sp"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white" />

        <!-- Vote Count Display -->
        <TextView
            android:id="@+id/vote_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="0 upvotes | 0 downvotes" />

        <!-- Downvote Button with Icon -->
        <Button
            android:id="@+id/downvote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▼ Downvote"
            android:padding="8dp"
            android:textSize="14sp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Back to Map button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Map"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Get Directions button -->
    <Button
        android:id="@+id/get_directions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|end" />

    <!-- Comments container -->
    <LinearLayout
        android:id="@+id/comments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
